<!doctype html>
<html lang="en">
    <head>
        <title>{% block title %}Neil Kinnish{% endblock %} | Developer / Creative / Consultant. Currently meddling with new technology and ideas. Co-founder @teammixture @workfu.</title>
        <link rel="shortcut icon" type="image/ico" href="{{ "favicon.ico" | asset_url }}" />
        {{ "app.css" | asset_url | stylesheet_tag }}
        {{ "modernizr.min.js" | asset_url | script_tag }}
    </head>
    <body>
        <div class="wrapper">
            {% include "header" %}
            <div class="content">
                <article>
                    <h1>{{ model.title }}</h1>
                    {% block content %}{% endblock %}
                    <div class="details">Posted: <span>{{ model.date | date:'%a, %d %b %Y' }}</span>{% comment %}. Tags: {{ model.tags | join:', ' }}.{% endcomment %}</div>
                </article>
            </div>
            {% include "footer" %}
        </div>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
        {{ "app.js" | asset_url | script_tag }}
    </body>
</html>
