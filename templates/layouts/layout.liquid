<!doctype html>
<html lang="en">
    <head>
        <title>{% block title %}Collections{% endblock %}</title>
        <link rel="shortcut icon" type="image/ico" href="{{ "favicon.ico" | asset_url }}" />
        {{ "app.css" | asset_url | stylesheet_tag }}
    </head>
    <body>
        <div class="wrapper">
            {% include "header" %}
            <div class="content">
                <article>
                    <h1>{{ model.title }}</h1>
                    {% block content %}{% endblock %}
                    <div class="details"><span>{{ model.date | date:'%a, %d %b %Y' }}</span>{% comment %}. Tags: {{ model.tags | join:', ' }}.{% endcomment %}</div>
                </article>
            </div>
            {% include "footer" %}
        </div>
    </body>
</html>